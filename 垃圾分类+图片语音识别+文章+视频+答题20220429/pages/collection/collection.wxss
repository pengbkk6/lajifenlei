page {
  background: gainsboro;
}

.item_root {
  display: flex;
  background: white;
  height: 150rpx;
  margin-top: 10rpx;
  padding: 20rpx;
}

.item_img {
  width: 200rpx;
  min-width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 35rpx;
  width: 100%;
  height: 140rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
}