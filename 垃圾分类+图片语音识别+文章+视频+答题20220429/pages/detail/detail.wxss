.title {
  font-size: 40rpx;
}

.root2 {
  display: flex;
  padding: 5rpx;
  justify-content: space-between;
}

.root2-1 {
  color: gray;
  display: flex;
  flex-direction: column;
}



.img {
  margin-top: 5rpx;
  width: 100%;
}

rich-text {
  margin: 15rpx;
  font-size: 30rpx;
}

/* 热门推荐 */
.hot {
  margin: 20rpx;
  font-size: 44rpx;
}

.item_root {
  display: flex;
  background: white;
  margin-top: 10rpx;
  padding: 20rpx;
}

.item_img {
  width: 200rpx;
  min-width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 35rpx;
  width: 100%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
}

.bottom {
  font-size: 30rpx;
  color: gray;
  margin-top: 15rpx;
}

.shoucang {
  margin-left: 20rpx;
}

/* 评论区域 */
.ping_root {
  margin-bottom: 140rpx;
}

/*回答列表样式 */
.answer_tip {
  font-size: 49rpx;
  margin: 20rpx;
  color: red;
}

.answer_content {
  padding-bottom: 200rpx;
}

.pinglun_item_root {
  border-bottom: 1px solid gainsboro;
  padding-bottom: 10rpx;
}

.top_root {
  display: flex;
  flex-direction: row;
  /* 上下居中 */
  align-items: center;
}

.img_left {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  vertical-align: middle;
  margin: 15rpx;
}

.top_right {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 27rpx;
  margin-left: 10rpx;
  color: black;
}

.content {
  margin: 5rpx 25rpx;
  font-size: 25rpx;
  line-height: 40rpx;
}

/* 底部区域 */
.bottom_root {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  border-top: 1px solid gainsboro;
  z-index: 10;
  display: flex;
}

.bottom_fabu {
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  background: burlywood;
  font-size: 44rpx;
  border-radius: 70rpx;
  color: white;
  margin: 5rpx 15rpx;
}

.bottom_img {
  padding: 5rpx;
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}