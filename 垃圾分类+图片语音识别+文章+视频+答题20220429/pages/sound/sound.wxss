.ai_root {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50rpx;
}

.ai_img {
    width: 250rpx;
    height: 250rpx;
    margin-top: 150rpx;
}

.ai_txt {
    font-size: 44rpx;
    font-weight: bold;
    color: #00cc77;
    margin-top: 30rpx;
}



