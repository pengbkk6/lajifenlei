page {
    background: gainsboro;
}


.item {
    margin: 20rpx;
    background: white;
    border-radius: 15rpx;
    padding-bottom: 20rpx;
}

.item_img {
    width: 100%;
    height: 450rpx;
    border-radius: 15rpx 15rpx 0 0;
}

.item_title {
    margin: 5rpx 20rpx;
    font-size: 35rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-break: break-all;
}

.bottom {
    font-size: 30rpx;
    color: gray;
    margin: 20rpx;
}

.shoucang {
    margin-left: 40rpx;
}